FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 443
EXPOSE 8080
COPY https /https

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY BE/BE.csproj ./BE.csproj
RUN dotnet restore BE.csproj
COPY BE/. .
RUN dotnet publish BE.csproj -c Release -o /app/publish

FROM base AS final
WORKDIR /app

COPY BE/appsettings.json ./appsettings.json
COPY BE/appsettings.Production.json ./appsettings.Production.json

COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "BE.dll"]
