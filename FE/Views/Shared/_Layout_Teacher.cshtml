@{
    Layout = null;
    var teacherName = User.Identity?.Name ?? "Giảng viên";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Teacher Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Employee/Dashboard">🎓 Giảng viên</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/Employee/Dashboard">🏠 Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">📋 Danh sách lớp</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">🧮 Quản lý điểm</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">📢 Thông báo</a></li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white">@teacherName</a></li>
                    <li class="nav-item">
                        <a class="nav-link text-danger fw-semibold" href="/Account/Logout">Đăng xuất</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center mt-5 py-3 bg-light border-top">
        <small>&copy; 2025 - Teacher Management System</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
