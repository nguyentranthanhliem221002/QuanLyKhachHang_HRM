@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using System.Security.Claims
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

@{
    var user = HttpContextAccessor.HttpContext?.User;
    var isAuthenticated = user?.Identity?.IsAuthenticated ?? false;
    var username = isAuthenticated ? user.Identity.Name : null;
    var role = user?.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;

    // Xác định API URL dựa trên môi trường
    string apiUrl;
    var environment = Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") ?? "Development";

    if (environment == "Production")
    {
        // Production: Dùng IP public của BE server
        apiUrl = Environment.GetEnvironmentVariable("API_URL_CLIENT")
                 ?? Configuration["BackendApi:BaseUrl"]
                 ?? "https://98.95.20.86:5000";
    }
    else if (environment == "Docker")
    {

        apiUrl = Environment.GetEnvironmentVariable("API_URL_CLIENT")
                 ?? "https://98.95.20.86:5000";
    }
    else
    {
        // Development: Dùng localhost
        apiUrl = Configuration["BackendApi:BaseUrl"]
                 ?? "https://localhost:51745";
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống quản lý học viên</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <!-- Modal xác thực -->
    <div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="authModalLabel">
                        <i class="bi bi-person-lock me-2"></i>Yêu cầu xác thực
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body text-center">
                    <p class="fs-5">Bạn chưa đăng nhập. Vui lòng chọn hành động:</p>
                    <div class="d-flex justify-content-center gap-3 mt-3">
                        <a href="/Account/Login" class="btn btn-primary px-4">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập
                        </a>
                        <a href="/Account/Register" class="btn btn-outline-primary px-4">
                            <i class="bi bi-person-plus me-1"></i>Đăng ký
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard-fill me-2 fs-4"></i>Hệ thống Quản lý Học viên
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle-fill me-1"></i>Giới thiệu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Contact">
                                <i class="bi bi-envelope-fill me-1"></i>Liên hệ
                            </a>
                        </li>

                        @* Dropdown Admin *@
                        @if (role == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear-fill me-1"></i>Quản trị
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">Bảng điều khiển</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageStudents">Quản lý học viên</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageCourses">Quản lý khóa học</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageEmployees">Quản lý nhân viên</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManagePayments">Quản lý hóa đơn</a></li>
                                </ul>
                            </li>
                        }
                        @if (role == "Student")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Student" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2 me-1"></i>Bảng điều khiển
                                </a>
                            </li>
                        }

                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (!isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="btn text-white fw-semibold px-3" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-person-circle me-1"></i>Đăng nhập
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white fw-semibold" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i>@username
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><span class="dropdown-item-text text-muted">Quyền: @role</span></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-1"></i>Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-light mt-auto pt-4 pb-3">
        <div class="container text-center text-md-start">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold text-uppercase mb-3">Hệ thống giáo dục SNAT</h5>
                    <p>Nền tảng quản lý học viên trực tuyến, hỗ trợ học tập và quản lý hiệu quả.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold text-uppercase mb-3">Liên hệ</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-geo-alt-fill me-2"></i>123 Đường Nguyễn Văn Cừ, Quận 5, TP.HCM</li>
                        <li><i class="bi bi-telephone-fill me-2"></i>(028) 1234 5678</li>
                        <li><i class="bi bi-envelope-fill me-2"></i>lienhe@snat.edu.vn</li>
                        <li><i class="bi bi-clock-fill me-2"></i>Thứ 2 - Thứ 6: 8:00 - 17:00</li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold text-uppercase mb-3">Liên kết nhanh</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index" class="text-light text-decoration-none">Trang chủ</a></li>
                        <li><a asp-controller="Home" asp-action="About" class="text-light text-decoration-none">Giới thiệu</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="text-light text-decoration-none">Liên hệ</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none">Chính sách bảo mật</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="text-center border-top border-secondary mt-3 pt-3">
            &copy; 2025 - Hệ thống quản lý học viên SNAT. Mọi quyền được bảo lưu.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Expose API URL to client-side JavaScript
        window.API_URL = "@apiUrl";
        window.ENVIRONMENT = "@environment";
        console.log("🌍 Environment:", window.ENVIRONMENT);
        console.log("✅ API_URL:", window.API_URL);
    </script>
    <script src="~/js/api.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>