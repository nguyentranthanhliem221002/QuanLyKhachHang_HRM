@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    Layout = null;
    var adminName = User.Identity?.Name ?? "Admin";

    string environment = Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") ?? "Development";

    string apiUrl;
    if (environment == "Production")
    {
        apiUrl = Environment.GetEnvironmentVariable("API_URL_CLIENT")
                 ?? Configuration["BackendApi:BaseUrl"]
                 ?? "https://98.95.20.86:5000";
    }
    else if (environment == "Docker")
    {
        apiUrl = Environment.GetEnvironmentVariable("API_URL_CLIENT")
                 ?? "https://98.95.20.86:5000";
    }
    else
    {
        apiUrl = Configuration["BackendApi:BaseUrl"]
                 ?? "https://localhost:51745";
    }
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/css/admin.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center mt-3">Admin Panel</h4>
        <hr />
        <a href="/Admin/Dashboard">🏠 Dashboard</a>
        <a asp-controller = "Admin" asp-action="Dashboard">👤 Quản lý người dùng</a>
        <a asp-controller="Admin" asp-action="ManageCourses">📘 Quản lý khóa học</a>
        <a asp-controller="Admin" asp-action="ManageStudents">📘 Quản lý học viên</a>
        <a asp-controller="Admin" asp-action="ManageEmployees">📘 Quản lý giáo viên</a>
        <a  asp-controller="Admin" asp-action="ManagePayments">📘 Quản lý hóa đơn</a>
        @* <a href="#">🧾 Quản lý báo cáo</a>
        <a  asp-controller="Admin" asp-action="Reports">💬 Phản hồi</a> *@
        <a >⚙️ Cài đặt</a>
        @* <hr />
        <a href="/Home/Index" class="text-danger">⬅️ Quay về trang chính</a> *@
    </div>

    <!-- Main content -->
    <div class="main-content">
        <nav class="navbar navbar-light bg-white shadow-sm mb-3">
            <div class="container-fluid d-flex justify-content-between">
                <span class="navbar-text fw-semibold">Xin chào, @adminName</span>
                <a href="/Account/Logout" class="btn btn-outline-danger btn-sm fw-semibold">
                    <i class="bi bi-box-arrow-right me-1"></i> Đăng xuất
                </a>
            </div>
        </nav>

        <div class="p-3">
            @RenderBody()
        </div>
    </div>
    <script>
        window.API_URL = "@apiUrl";
        window.ENVIRONMENT = "@environment";
        console.log("🌍 Environment:", window.ENVIRONMENT);
        console.log("✅ API_URL:", window.API_URL);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/api.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
