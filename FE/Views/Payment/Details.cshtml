@model FE.Models.PaymentViewModel
@{
    Layout = "~/Views/Shared/_Layout_Student.cshtml";
    ViewData["Title"] = "Chi tiết thanh toán";
}

<h2>Chi tiết thanh toán</h2>

<div class="card p-3">
    <p><strong>Tên khóa học:</strong> @Model.CourseTitle</p>
    <p><strong>Giảng viên:</strong> @Model.SubjectName</p>
    <p><strong>Thời gian:</strong> @Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")</p>
    <p><strong>Trạng thái:</strong> @(Model.IsPaid ? "Đã thanh toán" : "Chưa thanh toán")</p>
    <p><strong>Phí:</strong> @Model.Fee.ToString("N0") đ</p>
    <p><strong>Ngày thanh toán:</strong> @Model.PaymentDate?.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Mã giao dịch:</strong> @Model.TransactionId</p>

    <button class="btn btn-secondary mt-3" onclick="window.print();">In thông tin thanh toán</button>
</div>
