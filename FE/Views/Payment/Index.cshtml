@model FE.Models.PaymentRequest
@{
    Layout = "~/Views/Shared/_Layout_Student.cshtml";
    ViewData["Title"] = "Thanh toán";
}

<h2>Thanh toán khóa học</h2>

<form asp-action="Pay" method="post">
    <input type="hidden" asp-for="CourseId" />
    <div class="mb-3">
        <label>Số tiền:</label>
        <input asp-for="Amount" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-primary">Thanh toán với MoMo</button>
</form>
