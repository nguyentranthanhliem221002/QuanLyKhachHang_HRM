@model FE.Models.EmployeeViewModel

@{
    Layout = "~/Views/Shared/_Layout_Teacher.cshtml";
    ViewData["Title"] = "Trang giảng viên";
}

<h2>Chào mừng, @Model.FullName!</h2>
<p>Đây là trang tổng quan dành cho giảng viên.</p>

<div class="card mt-4">
    <div class="card-header bg-primary text-white">
        Thông tin cá nhân
    </div>
    <div class="card-body">
        <p><strong>Họ tên:</strong> @Model.FullName</p>
        <p><strong>Chức vụ:</strong> @Model.Position</p>
        <p><strong>Mức:</strong> @Model.Level</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>SĐT:</strong> @Model.Phone</p>
    </div>
</div>

<div class="mt-4">
    <h4>Các chức năng nhanh:</h4>
    <ul>
        <li><a href="#">Xem danh sách lớp học</a></li>
        <li><a href="#">Quản lý điểm sinh viên</a></li>
        <li><a href="#">Gửi thông báo</a></li>
    </ul>
</div>
