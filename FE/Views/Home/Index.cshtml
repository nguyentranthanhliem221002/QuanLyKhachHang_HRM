@{
    ViewData["Title"] = "Home Page";
}

<div class="home container-fluid p-0">
    <div class="banner_01">
        <img src="~/images/Background_Home.jpg" class="img-fluid w-100" alt="Banner Home" />
    </div>
</div>

<section class="container my-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">🎉 Các Khóa Học Ưu Đãi Tháng 10 🎉</h2>
        <p class="text-muted">Khuyến mãi đặc biệt cho học viên đăng ký trong tháng 10 — Giảm đến 30%</p>
    </div>

    <ul class="nav nav-tabs justify-content-center mb-4" id="gradeTabs" role="tablist">
        <li class="nav-item"><button class="nav-link active" id="tab-10" data-bs-toggle="tab" data-bs-target="#grade10" type="button">Lớp 10</button></li>
        <li class="nav-item"><button class="nav-link" id="tab-11" data-bs-toggle="tab" data-bs-target="#grade11" type="button">Lớp 11</button></li>
        <li class="nav-item"><button class="nav-link" id="tab-12" data-bs-toggle="tab" data-bs-target="#grade12" type="button">Lớp 12</button></li>
    </ul>

    <div class="tab-content" id="gradeTabsContent">
        <div class="tab-pane fade show active" id="grade10">
            @await Html.PartialAsync("_CourseList", new { grade = "10" })
        </div>
        <div class="tab-pane fade" id="grade11">
            @await Html.PartialAsync("_CourseList", new { grade = "11" })
        </div>
        <div class="tab-pane fade" id="grade12">
            @await Html.PartialAsync("_CourseList", new { grade = "12" })
        </div>

    </div>
</section>
