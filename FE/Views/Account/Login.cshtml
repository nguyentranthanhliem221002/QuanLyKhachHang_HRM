@model FE.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Đăng nhập</h2>

            <form asp-action="Login" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Tên đăng nhập</label>
                    <input asp-for="UserName" class="form-control" placeholder="Nhập username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
                </div>

                @if (ViewBag.Error != null)
                {
                        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                }
            </form>

            <div class="text-center mt-3">
                <small>Chưa có tài khoản? <a asp-action="Register">Đăng ký ngay</a></small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
