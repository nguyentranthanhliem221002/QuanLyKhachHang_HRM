@model FE.Models.StudentViewModel
@{
    Layout = "~/Views/Shared/_Layout_Student.cshtml";
    ViewData["Title"] = "Khóa học của tôi";
}

<h2 class="mb-4">Khóa học của tôi</h2>

@if (Model.MyCourses != null && Model.MyCourses.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tên khóa học</th>
                <th>Giảng viên</th>
                <th>Thời gian</th>
                <th>Trạng thái thanh toán</th>
                <th>Giá khóa học</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.MyCourses)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.SubjectName</td>
                    <td>@course.StartDate.ToString("dd/MM/yyyy") - @course.EndDate.ToString("dd/MM/yyyy")</td>
                    <td>@(course.IsPaid ? "Đã thanh toán" : "Chưa thanh toán")</td>
                    <td>@course.Fee.ToString("N0") đ</td>
                    <td>
                        @if (!course.IsPaid)
                        {
                            <a asp-controller="Payment" asp-action="Index" asp-route-id="@course.Id" class="btn btn-primary btn-sm">Thanh toán</a>
                        }
                        else
                        {
                            <a asp-controller="Payment" asp-action="Details" asp-route-id="@course.Id" class="btn btn-success btn-sm">Xem thanh toán</a>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Hiện bạn chưa đăng ký khóa học nào.</p>
}
