@model IEnumerable<FE.Models.PaymentViewModel>

@{
    ViewData["Title"] = "Manage Payments Page";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Quản lý hóa đơn thanh toán</h2>

<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>#</th>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>SĐT</th>
            <th>Lớp</th>
            <th>Mức học</th>
            <th>Giá khóa học</th>
            <th>Ngày thanh toán</th>
            <th>Mã giao dịch</th>
            <th>Trạng thái</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Grade</td>
                    <td>@item.Level</td>
                    <td>@string.Format("{0:N0} đ", item.Fee)</td>
                    <td>@item.PaymentDate?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.TransactionId</td>
                    <td class="@(item.IsPaid ? "text-success fw-bold" : "text-danger fw-bold")">
                        @(item.IsPaid ? "Đã thanh toán" : "Chưa thanh toán")
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center text-danger fw-bold">Không có hóa đơn nào để hiển thị</td>
            </tr>
        }
    </tbody>
</table>
