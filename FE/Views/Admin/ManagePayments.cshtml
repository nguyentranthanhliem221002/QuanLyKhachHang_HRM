@{
    ViewData["Title"] = "Manage Payments Page";
}

<h2 class="mb-4">Quản lý thanh toán học viên</h2>

<table class="table table-bordered table-striped" id="paymentsTable">
    <thead class="table-primary">
        <tr>
            <th>#</th>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>SĐT</th>
            <th>Lớp</th>
            <th>Mức học</th>
            <th>Trạng thái thanh toán</th>
        </tr>
    </thead>
    <tbody>
        <!-- Dữ liệu sẽ load từ JS -->
    </tbody>
</table>

<script>
    const payments = [
        { fullName: "Nguyễn Văn A", email: "a@example.com", phone: "0901234567", grade: "10", level: "Trung bình", status: "Pending" },
        { fullName: "Trần Thị B", email: "b@example.com", phone: "0902345678", grade: "11", level: "Khá", status: "Paid" },
        { fullName: "Lê Văn C", email: "c@example.com", phone: "0903456789", grade: "12", level: "Giỏi", status: "Pending" },
        { fullName: "Phạm Thị D", email: "d@example.com", phone: "0904567890", grade: "10", level: "Khá", status: "Rejected" },
        { fullName: "Hoàng Văn E", email: "e@example.com", phone: "0905678901", grade: "11", level: "Trung bình", status: "Paid" }
    ];

    const tbody = document.querySelector('#paymentsTable tbody');
    payments.forEach((item, index) => {
        const tr = document.createElement('tr');
        tr.innerHTML = `
            <td>${index + 1}</td>
            <td>${item.fullName}</td>
            <td>${item.email}</td>
            <td>${item.phone}</td>
            <td>${item.grade}</td>
            <td>${item.level}</td>
            <td>${item.status}</td>
        `;
        tbody.appendChild(tr);
    });
</script>
